extends layout

block body
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#mnu', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')

      #mnu.collapse.navbar-collapse: ul.nav.navbar-nav.navbar-right(ng-show='loggedIn')
        li: a(href='#/status') Status
        li: a(href='#/config') Config
        li: a.logout(href='', ng-click='logout()') Logout

  .container(ng-view, ng-show='loggedIn')

  .container(ng-hide='loggedIn')
    form#login(action='', method='post')
      input(type='hidden', name='csrf', ng-value='csrf')
      label.sr-only(for='user') Username
      input#user.form-control(type='text', placeholder='Username', name='user', required)
      label.sr-only(for='pass') Password
      input#pass.form-control(type='password', placeholder='Password', name='pass', required)
      button.btn.btn-primary.btn-block(type='submit') Sign in
      - if (TODO)
        .alert.alert-danger(role='alert') {{loginMsg}}
          button.close(type='button', data-dismiss='alert', aria-label='Close')
           span(aria-hidden='true') &times;


  script(src='/.oodmin/lib/jquery-2.2.1.min.js')
  script(src='/.oodmin/lib/angular.min.js')
  script(src='/.oodmin/lib/bs/js/bootstrap.min.js')
  script(src='/.oodmin/js/teselecta.js')
  script(src='/.oodmin/js/main.js')

