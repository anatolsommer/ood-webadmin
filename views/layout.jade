doctype html
html(lang='en', csrf=csrf)
  head
    meta(name='viewport', content='width=device-width')
    title oodmin
    link(rel='stylesheet', href='/.oodmin/lib/bs/css/bootstrap.min.css')
    link(rel='stylesheet', href='/.oodmin/css/main.css')

  body(ng-app='ood')
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#mnu', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/.oodmin') oodmin

        #mnu.collapse.navbar-collapse: ul.nav.navbar-nav.navbar-right(ng-controller='MenuCtrl')
          block menu

    .container
      block content

    block script
